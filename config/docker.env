# Docker Container Configuration
# This file contains non-sensitive production settings for Docker containers

# Server Configuration
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=production
WORKERS=2

# Logging Configuration
LOG_LEVEL=INFO
ENABLE_STRUCTURED_LOGGING=true
LOG_TO_FILE=false
LOG_DIR=/app/logs

# MLflow Configuration
MLFLOW_TRACKING_URI=http://mlflow:5000

# Database Configuration (non-sensitive defaults)
POSTGRES_DB=mlflow
POSTGRES_USER=mlflow
# Note: POSTGRES_PASSWORD should be set in secrets.env or environment variables